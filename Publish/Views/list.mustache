<html>
<head>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <title>Projeto DBM Published - {{title}}s</title>
    {{>css}}
    <script>        
        function apagar(id) {
            var xhr = new XMLHttpRequest();
            xhr.open("DELETE", "../api/{{title}}/" + id, true);
            xhr.onreadystatechange = function () {
                if(xhr.readyState === 4 && xhr.status === 200) {
                    var response = JSON.parse(this.responseText)
                    if(response.success) 
                        window.location.reload();
                }
            }
            xhr.send(); 
        }
    </script>
</head>
<body>
{{>menu}}
    <table>
        <tr>
            {{#columns}}
            <th>{{name}}</th>
            {{/columns}}
        </tr>
        {{#rows}}
        <tr>
            {{#properties}}
            <td>
                {{value}}
            </td>
            {{/properties}} 
            {{#actions}}
            <td>
                {{#link}}
                    <a href="{{link}}" title="{{tooltip}}" {{#events}}{{name}}="javascript:{{function}}({{args}})" {{/events}}>
                        {{label}}
                        {{#image}}
                            <img src="{{src}}" alt="{{alt}}" />
                        {{/image}}
                    </a>
                {{/link}}
                
            </td>
            {{/actions}}
        </tr>
        {{/rows}}
    </table>
    <input type="button" value="Inserir" onclick="javascript:window.location.replace('./{{title}}/Inserir')" />
</body>

</html>